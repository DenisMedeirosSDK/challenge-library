// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Library {
  id      String  @id @default(uuid())
  name    String  @unique
  adminId String?

  address   Address? @relation(fields: [addressId], references: [id])
  addressId String?

  LibraryBook LibraryBook[]
  @@map("libraries")
}

model Address {
  id           String  @id @default(uuid())
  street       String
  city         String
  state        String
  zip          String
  streetNumber String
  complement   String
  latitude     String?
  longitude    String?

  Library Library[]
  Book    Book[]

  @@map("addresses")
}

enum State {
  NEW
  USED
  DAMAGED
}

model Book {
  id          String   @id @default(uuid())
  title       String
  edition     String
  year        Int
  releaseDate DateTime
  state       State
  inventory   Int

  addressId String
  address   Address? @relation(fields: [addressId], references: [id])

  LibraryBook LibraryBook[]
  @@map("books")
}

model LibraryBook {
  id String @id @default(uuid())

  libraryId String
  library   Library @relation(fields: [libraryId], references: [id])

  bookId String
  book   Book   @relation(fields: [bookId], references: [id])
}
